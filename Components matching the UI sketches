// packages/web/src/components/MonetizationPanel.tsx
import React from "react";

export const MonetizationPanel: React.FC<{ hours: number; rate: number }> = ({ hours, rate }) => (
  <div style={{ background: "#1a1a1a", padding: 16, borderRadius: 8 }}>
    <h3>Monetized</h3>
    <div style={{ fontSize: 28, fontWeight: 700 }}>{hours} hr</div>
    <div>${rate}/hr</div>
  </div>
);
// packages/web/src/components/ApiTable.tsx
import React from "react";

export const ApiTable: React.FC<{ rows: {method:string; endpoint:string; description:string}[] }> = ({ rows }) => (
  <div style={{ background: "#1a1a1a", padding: 16, borderRadius: 8 }}>
    <h3>API</h3>
    <table style={{ width: "100%", borderCollapse: "collapse" }}>
      <thead>
        <tr>
          <th style={{ borderBottom: "1px solid #333", textAlign: "left" }}>Method</th>
          <th style={{ borderBottom: "1px solid #333", textAlign: "left" }}>Endpoint</th>
          <th style={{ borderBottom: "1px solid #333", textAlign: "left" }}>Description</th>
        </tr>
      </thead>
      <tbody>
        {rows.map((r, i) => (
          <tr key={i}>
            <td style={{ borderBottom: "1px solid #333" }}>{r.method}</td>
            <td style={{ borderBottom: "1px solid #333" }}>{r.endpoint}</td>
            <td style={{ borderBottom: "1px solid #333" }}>{r.description}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
);
