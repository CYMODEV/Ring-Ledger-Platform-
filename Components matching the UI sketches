// packages/web/src/components/InventoryPanel.tsx
import React from "react";

export const InventoryPanel: React.FC<{ items: {label:string; icon?:string; count?:number}[] }> = ({ items }) => (
  <div style={{ background: "#1a1a1a", padding: 16, borderRadius: 8 }}>
    <h3>Inventory</h3>
    {items.map((i, idx) => (
      <div key={idx} style={{ display: "flex", justifyContent: "space-between", padding: "8px 0", borderBottom: "1px solid #333" }}>
        <span>{i.icon ?? "•"} {i.label}</span>
        <span>{i.count ?? 0}</span>
      </div>
    ))}
  </div>
);
// packages/web/src/components/ValuationPanel.tsx
import React from "react";

export const ValuationPanel: React.FC<{ value: number }> = ({ value }) => (
  <div style={{ background: "#1a1a1a", padding: 16, borderRadius: 8 }}>
    <h3>Valuation</h3>
    <div style={{ fontSize: 32, fontWeight: 700 }}>{value.toLocaleString()}</div>
  </div>
);
// packages/web/src/components/MarketplacePanel.tsx
